# Peace API Configuration File
#
# This is an example configuration file. Copy this to config.yaml and modify as needed.
#
# Configuration Priority (highest to lowest):
# 1. Environment variables (e.g., DATABASE_URL)
# 2. .env file
# 3. This YAML config file
# 4. Default values in code
#
# To use a different config file location, set the PEACE_CONFIG_FILE environment variable:
#   export PEACE_CONFIG_FILE=/path/to/my-config.yaml

# Application Settings
app_name: "Peace API"
debug: false

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
log_level: "INFO"

# Database Configuration
# SQLite example (default):
database_url: "sqlite+aiosqlite:///./peace.db"
# PostgreSQL example:
# database_url: "postgresql+asyncpg://user:password@localhost/peace"
echo_sql: false

# QDrant Vector Database
# Used for storing video audio transcriptions and embeddings
qdrant_url: "http://localhost:6333"
# Optional: Set API key if using QDrant Cloud or secured instance
# qdrant_api_key: "your-api-key-here"

# OpenAI API Configuration
# Used for Whisper audio transcription service
# Get your API key from: https://platform.openai.com/api-keys
# Cost: $0.006 per minute of audio
# openai_api_key: "sk-..."
# Optional: Organization ID for multi-org accounts
# openai_organization: "org-..."

# API Configuration
api_v1_prefix: "/api/v1"
