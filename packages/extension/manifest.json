{
  "manifest_version": 3,
  "name": "YouTube Video Summarizer",
  "version": "0.1.0",
  "description": "Generate PDF summaries of YouTube videos",
  "permissions": [
    "downloads",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "dist/background.js",
    "scripts": ["dist/background.js"]
  },
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  }
}
